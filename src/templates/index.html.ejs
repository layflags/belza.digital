<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('_meta_defaults.html.ejs', {}) %>
    <title>Belza Digital - Book your Digital Consultant now!</title>
    <link href="home.css" rel="stylesheet" />
    <%- include('_favicons.html.ejs', {}) %>
  </head>
  <body id="book-your-digital-consultant-now">
    <div class="bg"></div>
    <main>
      <div class="logo">
        <%- include('_ci/logo-darkbg.svg.ejs', { className: 'logo-signet anim anim--0' }) %>
        <%- include('_ci/belza-digital.svg.ejs', { className: 'logo-copy anim anim--1' }) %>
      </div>
      <div class="action anim anim--2">
        <a href="/consulting<%= hrefExt %>" class="btn action-btn anim anim--4">Book your Digital Consultant now!</a>
      </div>
    </main>
    <%- include('_footer.html.ejs', { className: 'anim anim--3' }) %>
    <video playsinline autoplay muted loop class="bg-video" oncanplay="this.classList.add('loaded')" id="video">
    </video>
    <script>
      setTimeout(function() { // defer
        if (window.innerWidth < 800) return; // do not load & show video on small devices - assuming mobile
        document.getElementById('video').innerHTML = '<source type="video/mp4" src="cloudy.mp4">';
      });
    </script>
    <%- include('_ga.html.ejs') %>
  </body>
</html>
